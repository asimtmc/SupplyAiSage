modules = ["python-3.11"]

[nix]
channel = "stable-24_05"
packages = ["glibcLocales"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "streamlit run entry.py --server.port 5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Streamlit Server"
author = 19293685
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.address 0.0.0.0 --server.port 5000 --server.headless true --server.enableCORS false --server.enableXsrfProtection false"

[[workflows.workflow]]
name = "Streamlit with SQLite"
author = 19293685
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.address 0.0.0.0 --server.port 5000 --server.headless true --server.enableCORS false --server.enableXsrfProtection false"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow]]
name = "Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run entry.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
